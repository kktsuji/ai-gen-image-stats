{
  "experiment": "gan",
  "model": {
    "name": "dcgan",
    "latent_dim": 100,
    "image_size": 32,
    "channels": 3,
    "generator_features": 64,
    "discriminator_features": 64
  },
  "data": {
    "train_path": "data/train",
    "batch_size": 2,
    "num_workers": 0,
    "image_size": 32
  },
  "training": {
    "epochs": 2,
    "learning_rate": 0.0002,
    "optimizer": "adam",
    "beta1": 0.5,
    "beta2": 0.999,
    "device": "cpu"
  },
  "output": {
    "checkpoint_dir": "outputs/checkpoints",
    "log_dir": "outputs/logs",
    "save_samples_every": 1
  }
}
